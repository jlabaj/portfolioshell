{
  "name": "portfolioshell",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/portfolioshell/src",
  "prefix": "app",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-architects/native-federation:build",
      "options": {},
      "configurations": {
        "production": {
          "target": "portfolioshell:esbuild:production"
        },
        "development": {
          "target": "portfolioshell:esbuild:development",
          "dev": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-architects/native-federation:build",
      "options": {
        "target": "portfolioshell:serve-original:development",
        "rebuildDelay": 0,
        "dev": true,
        "port": 0
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n"
    },
    "esbuild": {
      "executor": "@angular/build:application",
      "options": {
        "outputPath": "dist/apps/portfolioshell",
        "index": "apps/portfolioshell/index.html",
        "browser": "apps/portfolioshell/src/main.ts",
        "polyfills": [
          "zone.js",
          "es-module-shims"
        ],
        "tsConfig": "apps/portfolioshell/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/portfolioshell/public"
          }
        ],
        "styles": [
          "apps/portfolioshell/src/styles.scss",
          "@angular/material/prebuilt-themes/indigo-pink.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "optimization": true,
          "outputHashing": "all",
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kB",
              "maximumError": "1MB"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kB",
              "maximumError": "8kB"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-original": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "portfolioshell:esbuild:production"
        },
        "development": {
          "buildTarget": "portfolioshell:esbuild:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4200
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/portfolioshell/**/*.ts",
          "apps/portfolioshell/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@angular/build:karma",
      "options": {
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ],
        "tsConfig": "apps/portfolioshell/tsconfig.spec.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/portfolioshell/public"
          }
        ],
        "styles": [
          "apps/portfolioshell/src/styles.scss"
        ],
        "scripts": []
      }
    }
  }
}
